    <div class="container">
      <header>User Signup Form</header>
      <div class="progress-bar">
        <div class="step">
          <p>Name</p>
          <div class="bullet">
            <span>1</span>
          </div>
          <div class="check fas fa-check"></div>
        </div>
        <div class="step">
          <p>Contact</p>
          <div class="bullet">
            <span>2</span>
          </div>
          <div class="check fas fa-check"></div>
        </div>
        <div class="step">
          <p>Birth</p>
          <div class="bullet">
            <span>3</span>
          </div>
          <div class="check fas fa-check"></div>
        </div>
        
      </div>
      <div class="form-outer">
        <form action="/signup" method="POST">
          <div class="page slide-page">
            <div class="title">Basic Info:</div>
            <div class="field">
                {{!-- <label>Name</label> --}}
                <div class="label">Name</div>
              <form class="label" aria-placeholder="name" id="name" name="name">
                            <input type="text" placeholder="name" id="name" name="name">
            </div>
            <div class="field">
                <div class="label">Password</div>
                            <form class="label" aria-placeholder="password" id="password" name="password">
              <input type="text" placeholder="password" id="password" name="password">

            </div>
            <div class="field">
              <button class="firstNext next">Next</button>
            </div>
            <p>for User login? <a href="/signin">Here_</a></p>
            <p>for seller signup? <a href="/sellersignup">Here_</a></p>
            <p>for seller login? <a href="/sellersignin">Here_</a></p>
          </div>

          <div class="page">
            <div class="title">Contact Info:</div>
            <div class="field">
                <div class="label">email</div>
                            <form class="label" aria-placeholder="email" id="email" name="email">
              <input type="text" placeholder="email" id="email" name="email">

            </div>
            <div class="field">
                <div class="label">Phone</div>
                            <form class="label" aria-placeholder="phone" id="phone" name="phone">
              <input type="Number" placeholder="phone" id="phone" name="phone">

            </div>
            <div class="field btns">
              <button class="prev-1 prev">Previous</button>
              <button class="next-1 next">Next</button>
            </div>
          </div>

          <div class="page">
            <div class="title">Date of Birth:</div>
            <div class="field">
                <div class="label">Dob</div>
                            <form class="label" aria-placeholder="dob" id="dob" name="dob">
              <input type="text" placeholder="dob" id="dob" name="dob">

            </div>
            <div class="field">
                <div class="label">Confirm Password</div>
                            <form class="label" aria-placeholder="cpassword" id="cpassword" name="cpassword">
              <input type="text" placeholder="cpassword" id="cpassword" name="cpassword">
            </div>
            {{!-- <div class="field">
